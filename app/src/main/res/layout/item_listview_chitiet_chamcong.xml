<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_chitiet_chamcong"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/namsinh" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Chấm Công : " />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Sản Phẩm : " />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Thành Phẩm : " />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Phế Phẩm : " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_machamcong_in_chitietchamcong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Chấm Công : " />

        <TextView
            android:id="@+id/tv_masanpham_in_chitietchamcong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Sản Phẩm : " />

        <TextView
            android:id="@+id/tv_sothanhpham_in_chitietchamcong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Thành Phẩm : " />

        <TextView
            android:id="@+id/tv_sophepham_in_chitietchamcong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Phế Phẩm : " />
    </LinearLayout>

</LinearLayout>