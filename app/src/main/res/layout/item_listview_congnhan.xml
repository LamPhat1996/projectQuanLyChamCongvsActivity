<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_congnhan"
        android:src="@drawable/namsinh"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Công Nhân " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ Công Nhân" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Công Nhân" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phân Xưởng" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_MaCN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Công Nhân " />

        <TextView
            android:id="@+id/tv_hocn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ Công Nhân" />

        <TextView
            android:id="@+id/tv_tenCN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Công Nhân" />
        <TextView
            android:id="@+id/tv_phanXuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phân Xưởng" />
    </LinearLayout>

</LinearLayout>